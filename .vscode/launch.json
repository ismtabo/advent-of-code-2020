  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Deno",
      "request": "launch",
      "type": "pwa-node",
      "program": "./src/cli/mod.ts",
      "runtimeExecutable": "deno",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": [
        "run",
        "--unstable",
        "--inspect-brk",
        "--allow-all",
      ],
      "args": [
        "run",
        "-d 14",
        "-p 2",
        "src/solutions/day14/sample_1.txt"
      ],
      "attachSimplePort": 9229,
      "outputCapture": "std"
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Deno Test",
      "program": "${workspaceFolder}/src/solutions/day15/partOne/test.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "test",
        "--inspect-brk=127.0.0.1:9229",
        "--allow-all",
        "--filter \"results\""
      ],
      "attachSimplePort": 9229
    },
  ]
}
